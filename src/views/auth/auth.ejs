<%- include("../header.ejs") %>
<body class="bg-gray-900">
    <div class="flex items-center justify-center h-screen">
        <div class="bg-black/30 max-w-md mx-auto shadow-md rounded-xl px-8 pt-6 pb-8 mb-4 flex flex-col w-2/3 min-w-fit">
            <form action="/auth/login" method="POST">
                <div class="mb-4">
                    <label class="block text-white text-sm font-bold mb-2" for="username">
                        Username
                    </label>
                    <input class="shadow appearance-none border rounded-xl w-full py-2 px-3 text-white bg-gray-900" id="username" name="username" type="text" placeholder="Username">
                </div>
                <div class="mb-6">
                    <label class="block text-white text-sm font-bold mb-2 " for="password">
                        Password
                    </label>
                    <input class="shadow appearance-none border border-red rounded-xl w-full py-2 px-3 text-white bg-gray-900 mb-3" id="password" name="password" type="password" placeholder="******************">
                </div>
                <div class="flex items-center justify-center">
                    <button class="bg-gray-900 text-white font-bold py-2 px-4 rounded-xl transition ease-in-out duration-700 hover:scale-110 hover:bg-white hover:text-gray-900 w-2/3" type="submit">
                        Log In
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>