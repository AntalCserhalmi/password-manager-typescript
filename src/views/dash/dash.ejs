<%- include("../header.ejs") %>
<%- include("../navbar.ejs") %>
    <script src="https://unpkg.com/flowbite@1.3.4/dist/flowbite.js"></script>
    <body class="bg-gray-900">
        <table class="text-white mx-auto mt-3.5 h-24 min-h-full  bg-[#1c2333] rounded-xl">
            <thead>
                <tr>
                    <th class="px-10 py-3 text-left">Site</th>
                    <th class="px-10 py-3 text-left">Username</th>
                    <th class="px-10 py-3 text-left">Encrypted Password</th>
                    <th class="px-10 py-3 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < data.users.length; i++) {let v = data.users[i]%>
                    <tr>
                        <td class="px-10 py-3">
                            <span><%- v.site %></span>
                        </td>
                        <td class="px-10 py-3">
                            <span><%- v.username %></span>
                        </td>
                        <td class="px-10 py-3 cursor-pointer" id="<%= v.siteId %>" onclick="handlePassword('<%- v.siteId %>')">
                            <span data-status="0"><%- v.password %></span>
                        </td>
                        <td class="px-10 py-3">
                            <div class="justify-around">
                                <button class="editBtn text-green-50 bg-green-500 rounded-xl py-1.5 w-20 transition ease-in-out duration-500 hover:bg-green-800 hover:scale-105" id="<%= v.siteId %>">Edit</button>
                                <button class="deleteBtn text-white bg-red-500 rounded-xl py-1.5 w-20 transition ease-in-out duration-500 hover:bg-red-800 hover:scale-105" id="<%=v.siteId%>" data-modal-toggle="popup-modal">Delete</button>
                            </div>
                        </td>
                    </tr>
                <%}%>
            </tbody>
        </table>


        <!-- Delete Product Modal -->
    <div class="hidden overflow-y-auto overflow-x-hidden fixed right-0 left-0 top-4 z-50 justify-center items-center md:inset-0 h-modal sm:h-full" id="popup-modal">
        <div class="relative px-4 w-full max-w-md h-full md:h-auto">
        <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-800">
            <!-- Modal header -->
                <div class="flex justify-end p-2">
                    <button type="button" class="text-gray-500 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white" data-modal-toggle="popup-modal">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>  
                    </button>
                </div>
                <!-- Modal body -->
                <div class="p-6 pt-0 text-center">
                    <svg class="mx-auto mb-4 w-14 h-14 text-gray-400 dark:text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">Are you sure you want to delete this account?</h3>
                    <input type="hidden" id="siteIdDashHidden" name="siteId">

                    <button data-modal-toggle="popup-modal" class="text-white bg-green-600 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2" type="submit" id="formSubmit" data-method="delete">
                    Yes
                    </button>
                    <button data-modal-toggle="popup-modal" class="text-white-color bg-red hover:bg-red-100 focus:ring-4 focus:ring-red-300 rounded-lg text-sm font-medium px-5 py-2.5 hover:text-red-900 focus:z-10 dark:bg-red-800 dark:text-white-color  dark:hover:text-white-color dark:hover:bg-red-600" type="button">No, cancel</button>
                </div>
            </div>
        </div>
    </div>
    </body>